<%= link_to "Home", root_path unless current_page? root_path %>
<% if user_signed_in? %>
  <%= link_to "Create new post", new_post_path unless current_page? new_post_path %>
  <%= link_to "Logout", destroy_user_session_path, method: :delete unless current_page? destroy_user_session_path %>
<% else %>
  <%= link_to "Sign up", new_user_registration_path unless current_page? new_user_registration_path %>
  <%= link_to "Login", user_session_path unless current_page? user_session_path %>
<% end %>